<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Podcast</name>
    <author>KlarkC</author>
    <version>1.0.0</version>
    <description>MOD_PODCAST_PROJECT_DESCRIPTION</description>
    <files>
        <filename>mod_podcast.xml</filename>
        <filename module="mod_podcast">mod_podcast.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <media folder="media" destination="mod_podcast">
        <folder>css</folder>
        <folder>img</folder>
        <folder>js</folder>
    </media>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_podcast.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="categories" 
                    type="category" 
                    extension="com_content" 
                    label="MOD_PODCAST_FIELD_CATEGORIES_LABEL" 
                    description="MOD_PODCAST_FIELD_CATEGORIES_DESC"
                    required="true"                />
                <field
                    name="limit"
                    type="text"
                    size="30"
                    label="MOD_PODCAST_FIELD_LIMIT_LABEL"
                    description="MOD_PODCAST_FIELD_LIMIT_DESC"
                    required="true" />
                <field
                    name="more_title"
                    type="text"
                    size="30"
                    label="MOD_PODCAST_FIELD_MORE_TITLE_LABEL"
                    default="MOD_PODCAST_FIELD_MORE_TITLE_DEFAULT"
                    required="true" />
                <field
                    name="more_url"
                    type="text"
                    size="30"
                    label="MOD_PODCAST_FIELD_MORE_URL_LABEL"
                    description="MOD_PODCAST_FIELD_MORE_URL_DESC"
                    default=""
                    required="false" />
            </fieldset>
            <fieldset
                name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                    name="moduleclass_sfx"
                    type="textarea" rows="3"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field
                    name="cachemode"
                    type="hidden"
                    default="static">
                    <option
                        value="static">
                    </option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
