<?xml version="1.0" encoding="UTF-8"?>

<project name="mod_podcast" default="init" basedir=".">
    <property file="nbproject\\private\\private.properties" />
    <property file="nbproject\\project.properties" />
    <property file="${netbeans.user}\\config\\Preferences\\org\\netbeans\\modules\\php\\project\\RemoteConnections\\${remote.connection}.properties" />

    <property name="src" location="./"/>
    <property name="language" location="language"/>
    <property name="media" location="media"/>
    <property name="build" location="nbproject/package"/>   
    <property name="manifest"  value="${src}/${ant.project.name}.xml" />
    
    <!-- run all the targets-->
    <target name="all" depends="run-ftp,zipup">
    </target>
    <target name="run-ftp" description="Uploading files to the various places">
        <!-- Create Directories -->
        <ftp action="mkdir" server="${host}" userid="${user}" password="${password}" verbose="true" passive="true" remotedir="${remote.directory}/modules/${ant.project.name}" />
        <ftp action="mkdir" server="${host}" userid="${user}" password="${password}" verbose="true" passive="true" remotedir="${remote.directory}/media/${ant.project.name}" />
        <!-- Copy Files -->
        <ftp server="${host}" userid="${user}" password="${password}" verbose="true" passive="true" remotedir="${remote.directory}/modules/${ant.project.name}">
            <fileset dir="src">
                <exclude name="**/*.svn/"/>
                <exclude name="**/*.git*/"/>
                <exclude name="**/nbproject/**"/>
                <exclude name="build.xml"/>
                <exclude name="**/language/**"/>
                <exclude name="**/media/**"/>
            </fileset>
        </ftp>
        <ftp server="${host}" userid="${user}" password="${password}" verbose="true" passive="true" remotedir="${remote.directory}/language">
            <fileset dir="language"></fileset>
        </ftp>
        <ftp server="${host}" userid="${user}" password="${password}" verbose="true" passive="true" remotedir="${remote.directory}/media/${ant.project.name}">
            <fileset dir="media"></fileset>
        </ftp>
    </target> 
    <target name="zipup"
            description="zips the archive" >
        <mkdir dir="${build}"/>
        <zip destfile="${build}/${ant.project.name}.zip">
            <zipfileset dir="${src}" excludes="build.xml,**/*.git*/,**/.svn/,**/nbproject/**"/>
        </zip>
    </target>
   
</project>
